<header class="boundary">
  <h1>MapGame</h1>
</header>

<div class="boundary" id="game_board">
  <div class="reticle"></div>
  <div id="messages"></div>
  <div id="cr-stage"></div>
  <div id="overlay"></div>
  <div id="map_div"></div>
</div>


<script>
  B.center.lat = <%= @loc[0] %>;
  B.center.long = <%= @loc[1] %>;
  Game.user_id = '<%= session[:user_id] %>';

  $(function() {
    // bing
    B.init();

    // timer
    setTimeout(function() {
      Game.helpers.loadScene("game");
    }, 500);
  });
</script>
